    <body>
        <nav class="navbar navbar-default navbar-static-top admin-auth-nav" role="navigation">
            <div class="">
                <div class="col-md-8 text-center">
                    {% image '@innoLCLbackBundle/Resources/assets/images/logo_LCL.png' %}
                                <img src="{{ asset_url }}"  alt="LCL" style="vertical-align: middle;" />
