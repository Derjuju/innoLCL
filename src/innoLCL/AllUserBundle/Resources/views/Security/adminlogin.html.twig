        <div>
            
<div class="admin-auth">
     <div class="col-md-7">
     
     
     </div>
     <div class="col-md-4 col-lg-3">
         <div class="row">
                {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                <div class="{{ type }} erreur-connexion">
                {{ message|trans({}, 'FOSUserBundle') }}
                </div>
                {% endfor %}
                {% endfor %}
                {% if error %}
                <div class="erreur-connexion">{{ error|trans({}, 'FOSUserBundle') }}</div>
                {% endif %}
            </div>
            <div class="row admin-auth-form">
                <h1 class="admin-auth-title">Identifiez-vous</h1>
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <div class="row">
                    <label for="username">Login :</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                    <div class="row">
                                <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                                <input type="password" id="password" name="_password" required="required" />
                    </div>
                    <div class="row">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me" class="remember">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                    </div>
                    <div class="row">
                    <input type="submit" id="_submit" name="_submit" value="Se connecter" />
                    </div>
                </form>
            </div>
             
    </div>
    
</div>

