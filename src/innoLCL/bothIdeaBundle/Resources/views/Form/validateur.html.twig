{# src/innoLCL/bothIdeaBundle/Resources/views/Form/validateur.html.twig#}

{{ form_start(form, {'attr': {'class': 'js-validateur'}}) }}
<div class="form-slide">
    <div class="form-button">
    {{ form_widget(form.save) }}
    </div>
    <div class="row">
        <div class="col-lg-6">
                <label>Titre de l'idée</label>
              <div class="panel panel-default">
                <div class="panel-body">
                    {{ idea.title }}
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <label>Prénom</label>
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ idea.Author.firstname }}
                </div>
            </div>
        </div>
        <div  class="col-lg-3">
            <label>Nom</label>
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ idea.Author.username }}
                </div>
            </div>            
        </div>
    </div>

     <div class="row">
            <div class="col-lg-4">
                <label>Déscriptif de l'idée</label>
                <div class="panel panel-default">
                    <div class="panel-body">
                        {{ idea.description }}
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <label>Descriptif du bénéfice de votre idée pour le client</label>
                <div class="panel panel-default">
                    <div class="panel-body">
                       {{ idea.partnerprofit }}                        
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <label>Descriptif du bénéfice pour les collaborateurs</label>
                <div class="panel panel-default">
                    <div class="panel-body">
                       {{ idea.customerprofit }}
                    </div>
                </div>
            </div>
    </div>
    
    <div class="row">
        <div class="col-lg-12">
                <label>Question bonus : Si l'idée était sélectionnée, quelle(s) démarche(s) de test engageriez-vous pour vérifier la faisabilité de sa mise en place</label>
                <div class="panel panel-default">
                    <div class="panel-body">
                        {{ idea.bonuscontent }}
                    </div>
                </div>
            </div>
        <div>
            
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-9">
            <label>Commentaire de pré-sélection</label>
            <div class="panel panel-default commentary panel-body">
                 {{ idea.commentary }}
            </div>
        </div>
        <div class="col-lg-3 button-box">    
              <a class="compare" target="_blank"   href="{{ path('innolcl_backbundle_compare', {'ideaid': idea.id }) }}">Comparer</a>
              <div class="box-icone-validation">
                    <span class="icone-validation maybe js-icone-validation" data-val="maybe"></span>
                    <span class="icone-validation valid js-icone-validation" data-val="validated"></span>
                    <span class="icone-validation refus js-icone-validation" data-val="refused"></span>
              </div>
                        {{ form_widget(form.statuts) }}
        </div>
    </div>
        
        

<div>
    
</div>
{{ form_end(form) }}
