{# src/innoLCL/frontBundle/Resources/views/Default/selection.html.twig #}

{% extends "innoLCLfrontBundle::layout.html.twig" %}

{% block body %}
    <header>              
        <div class="row">
            <div class="entete-generale">
                <div class="row">
					<div class="small-2 columns">
						{% image '@innoLCLfrontBundle/Resources/assets/images/logo_LCL.png' %}
							<img src="{{ asset_url }}"  alt="Challenge de l'innovation LCL" />
						{% endimage %}
					</div>
					<div class="small-8 columns">
						<h1 class="title">
						{% image '@innoLCLfrontBundle/Resources/assets/images/partipez.png' %}
								<img src="{{ asset_url }}"  alt="Participez au" class="" />
						{% endimage %}
						<br/>
						challenge de l'innovation LCL</h1>
					</div>
					<div class="small-2 columns"></div>  
				</div>
				<div class="row">
					<div class="small-12 columns">
						<div class="row text-center">
							{% image '@innoLCLfrontBundle/Resources/assets/images/les10.png' %}
								<img src="{{ asset_url }}"  alt="les 10" class="entete-generale__logo levitate" />
							{% endimage %}
						</div>
						<div class="row text-center">
							{% image '@innoLCLfrontBundle/Resources/assets/images/meilleures-idees.png' %}
								<img src="{{ asset_url }}"  alt="meilleures idées" class="entete-generale__logo" />
							{% endimage %}
						</div>
						<div class="row text-center">
							<p class="select_in_progress">sont en cours de sélection<br/>
							<span class="select_in_progress-standard"> et seront affichées dans une semaine.</span></p>
						</div>
						<div class="row text-center">
							{% image '@innoLCLfrontBundle/Resources/assets/images/souris_picto.png' %}
								<img src="{{ asset_url }}"  alt="Challenge de l'innovation LCL" />
							{% endimage %}
						</div>
					</div>
					<div class="small-3 columns"></div>     
					{% image '@innoLCLfrontBundle/Resources/assets/images/les10-shadow.png' %}
						<img src="{{ asset_url }}"  alt="Challenge de l'innovation LCL" class="entete-generale__ombre shadow"/>
					{% endimage %}    
                </div>           
            </div> 
        </div>
    </header>

    {{ include("innoLCLfrontBundle:Default:enattendant.html.twig") }}
    
    {% set dotationtitledisplay = 0 %}
    {{ include("innoLCLfrontBundle:Default:dotation.html.twig") }}
              
{% endblock %}
