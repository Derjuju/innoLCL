{# src/innoLCL/backBundle/Resources/views/validateur/list.html.twig #}

{% extends "innoLCLbackBundle::layout.html.twig" %}

{% block menu %}
        <div class="row navidea">
                <div class="container">
                    <div class="col-lg-3 col-md-6 col-lg-offset-3">
                        <div class="panel panel-blue">
							<a href="{{ path('innolcl_stats_list_video') }}">
								<div class="panel-heading text-center">
										<p class="cat_name">Vidéos</p>
								</div>
								{% if currentview == 'video' %}
									<div class="panel-footer text-center">
										 <i class="glyphicon glyphicon-menu-down "></i>
										<div class="clearfix"></div>
									</div>
								{% endif %}
							</a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="panel panel-yellow">
                            <a href="{{ path('innolcl_stats_list_laureats') }}">
                                <div class="panel-heading text-center">
                                        <p class="cat_name">Laureats</p>
                                </div>
                                {% if currentview == 'laureats' %}
                                <div class="panel-footer text-center">
                                     <i class="glyphicon glyphicon-menu-down "></i>
                                    <div class="clearfix"></div>
                                </div>
                            {% endif %}
                            </a>
                        </div>
                    </div>
                </div>
        </div>

{% endblock %}

{% block body %}
        <div class="row main-section section-{{currentview}}">
            <div class="container">
                <div class="col-lg-12 table-responsive">
                <table class="table table-hover" id="idealist">
                    <tr><th colspan="4">Récapitulatif des votes</th></tr>
                    <tr class="panel-heading"><th>Lauréats</th><th>Titre Idée</th><th>nb de vote</th><th>% de vote</th></tr>
                    {% for IdeaLaureat in IdeaLaureats %}
                    <tr>
                        <td>{{ IdeaLaureat.prenomAuthor }} {{ IdeaLaureat.nomAuthor }}</td>
                        <td>{{ IdeaLaureat.titre }}</td>
                        <td>{{ IdeaLaureat.nbVotes }}</td>
                        <td>{{ IdeaLaureat.pourcent }}</td>
                    </tr>
                    {% endfor %}
                    <tr>
                        <td></td><td class="text-right">Total</td>
                        <td>{{ totalvote }}</td>
                        <td>100 %</td>
                    </tr>
                </table>
                </div>
            </div>
        </div>
{% endblock %}
